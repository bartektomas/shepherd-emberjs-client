<div class="form-horizontal">
  <form id="asset-upload">
	<legend>Upload Asset to Portfolio</legend>
    <div class="control-group">
   		<label class="control-label">Asset Name</label>
   		<div class="controls">
			<input type="text" name="name" required="required" />
		</div>
	</div>
	<div class="control-group">
   		<label class="control-label">Description</label>
   		<div class="controls">
			<textarea placeholder="Asset Description" name="description"></textarea>
		</div>
	</div>
    <div class="control-group">
   		<label class="control-label">File</label>
   		<div class="controls">
        	<input type="file" name="file" required="required" />
        </div>
    </div>
	<input type="hidden" name="portfolio_id" value="{{unbound controller.portfolio}}" />
    <div class="control-group button-group-edit">
		<button type="submit" class="btn btn-success"> Upload </button>
        {{#view Shepherd.CancelButton }} Cancel {{/view}}
	</div>
  </form>
</div>
