<div id="portfolios">
	<div>
		<div id='portfolio-list'>
			{{view Vilio.PortfolioSelect2
		       contentBinding="controller.arrangedContent"
		       optionValuePath="content.id"
		       optionLabelPath="content.name"
		       selectionBinding="controller.selectedPortfolio" 
		       placeholderText="Please select a Portfolio"
		       prompt=" "}}
		</div>
		<div id="create-port-link">{{#linkTo portfolios.new}}Create{{/linkTo}}</div>
		<div id="portfolio">
			{{ outlet master }}
		</div>
	</div>
	<div>
		{{ outlet detail }}
	</div>
</div>